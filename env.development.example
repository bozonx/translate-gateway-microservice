###### Basic app settings
NODE_ENV=development
LISTEN_HOST=0.0.0.0
LISTEN_PORT=3000
API_BASE_PATH=api
LOG_LEVEL=warn
# Force application timezone (affects pretty logs)
TZ=UTC

###### HTTP
# Max HTTP request body size (MB)
HTTP_REQUEST_BODY_LIMIT_MB=10

###### Translation service
TRANSLATE_DEFAULT_PROVIDER=google
TRANSLATE_MAX_TEXT_LENGTH=5000
# Comma-separated allow-list of providers. If empty, all providers are allowed
TRANSLATE_ALLOWED_PROVIDERS=
# Request timeout for provider calls (seconds)
REQUEST_TIMEOUT_SEC=60

# GOOGLE_APPLICATION_CREDENTIALS=/path/to/gcp-service-account.json

# DEEPL_AUTH_KEY=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx:fx
