###### Basic app settings
NODE_ENV=development
LISTEN_HOST=0.0.0.0
LISTEN_PORT=3000

###### Timezone
# Force application timezone (affects pretty logs)
TZ=UTC

###### API prefix
API_BASE_PATH=api
API_VERSION=v1

###### Logging
# Development uses pretty logs
LOG_LEVEL=debug

###### Translation service
TRANSLATE_DEFAULT_PROVIDER=google
TRANSLATE_MAX_TEXT_LENGTH=5000

# GOOGLE_APPLICATION_CREDENTIALS=/path/to/gcp-service-account.json
